<div class="container">
	<div class="row card">
		<div class="col-md-6">
			<%= form_for :activity , url: user_activities_path(@user) do |f| %>
			  	<div class="form-group">
			  		<%= f.label :title %>
			    	<%= f.text_field :title, autocomplete: false, class: "form-control" %>
			  	</div>
				<div class="form-group">
					<%= f.label :description %>
			    	<%= f.text_area :description, class: "form-control" %>
				</div>
			    <%= f.submit "Save", class: "btn btn-primary" %>
			  
			<% end %>	
		</div>
	</div>
</div>
